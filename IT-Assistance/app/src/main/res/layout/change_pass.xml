<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/err_change_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d60404"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:inputType="textPassword"
            android:hint="Current password"
            android:id="@+id/current_pass"
            android:paddingStart="5dp"
            android:background="@drawable/round_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/new_username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_input"
            android:hint="New username"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="5dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:inputType="textPassword"
            android:hint="New password"
            android:id="@+id/new_pass"
            android:paddingStart="5dp"
            android:background="@drawable/round_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:inputType="textPassword"
            android:hint="Comfirm new password"
            android:id="@+id/pass_comfirm1"
            android:paddingStart="5dp"
            android:background="@drawable/round_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20" />
    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/change_btn"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_go_btn"
            android:layout_marginRight="58dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/close_change_btn"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.776"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" />


        <Button
            android:id="@+id/close_change_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_close_btn_mpya"
            android:layout_marginLeft="42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.056" />



    </android.support.constraint.ConstraintLayout>


</LinearLayout>